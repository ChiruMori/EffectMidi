.kb-container {
    position: relative;
    overflow: hidden;

    .kb {
        position: relative;
    }

    .kb-w {
        flex: 1;
        background-color: white;
        height: 100%;
        box-shadow: inset 0 -1px 2px 1px #333;
    }

    .kb-b {
        position: absolute;
        width: 0.8rem;
        background-color: black;
        height: 75%;
        top: -10px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1;
        box-shadow: inset 0px 0px 2px 2px #666;
    }
}