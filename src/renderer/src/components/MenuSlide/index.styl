
.menu-side {
    .menu {
        .menu-item {
            position: relative;
            margin: 0.25rem 0;

            .ani-txt {
                border-right: 3px;
                border-color: transparent;
                border-style: double;
                border-radius: 0.375rem;
                padding: 0.5rem 0;
                transition-duration: 500ms;
                width: 100%;
                text-align: center;
                max-width: 12rem;

                &:hover {
                    border-color: white;
                }
            }

            .ani-bg {
                border-left: 3px;
                border-color: white;
                border-style: double;
                border-radius: 0.375rem;
                top: 0;
                position: absolute;
                width: 100%;
                height: 100%;
                max-width: 12rem;
                z-index: -1;
            }
        }
    }
}