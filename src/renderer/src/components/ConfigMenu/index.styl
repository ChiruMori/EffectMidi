// 滚动条
::-webkit-scrollbar {
    width: 4px;
}

::-webkit-scrollbar-thumb {
    background-color: #666;
    border-radius: 2px;

    &:hover {
        background-color: #ccc;
    }
}

::-webkit-scrollbar-track {
    background-color: transparent;

    &:hover {
        background-color: #666;
    }
}

.content-page {
    padding: 0.75rem 0.75rem 3rem 0.75rem;
    height: 100%;
}
